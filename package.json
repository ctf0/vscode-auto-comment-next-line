{
    "name": "auto-comment-next-line",
    "displayName": "Auto Comment Next Line",
    "description": "auto comment next line when pressing enter",
    "version": "0.1.0",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-auto-comment-next-line",
    "engines": {
        "vscode": "^1.51.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "Auto Comment Next Line",
            "properties": {
                "autoCommentNextLine.list": {
                    "type": "array",
                    "default": [
                        {
                            "char": "//",
                            "languages": [
                                "php",
                                "javascript",
                                "typescript",
                                "jsonc",
                                "json"
                            ]
                        },
                        {
                            "char": "#",
                            "languages": [
                                "python"
                            ]
                        }
                    ],
                    "uniqueItems": true,
                    "description": "Single Line Comment Chars"
                }
            }
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.14.10",
        "@types/vscode": "^1.51.0",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    },
    "dependencies": {
        "escape-string-regexp": "^4.0.0"
    }
}
